<%= form_for @task do |t| %>
  <%= t.label :title, "Title" %>
  <%= t.text_field :title%>

  <%= t.label :details, "Details" %>
  <%= t.text_field :details%>

  <% unless @task.new_record?() %>
    <%= t.label :completed, "task done?" %>
    <%= t.check_box :completed %>
  <% end %>

  <%= t.submit %>
<% end %>
