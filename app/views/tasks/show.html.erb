<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
  <i class="fa-regular fa-square-check"></i><%= ' This task is completed!'%>
<% else %>
  <i class="fa-regular fa-square"></i><%= ' This task is not completed yet!' %>
<% end %>
<%= link_to "Edit this task", edit_task_path %>
<br><br>
<%= link_to "Back to list", tasks_path %>
